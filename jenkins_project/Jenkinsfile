pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                echo "Cloning the repository..."
                git branch: 'main', url: 'https://github.com/Jay-mishra04/MLOps-Project'
            }
        }

        stage('Navigate to Jenkins Project Folder') {
            steps {
                dir('jenkins_project') {
                    echo 'Inside Jenkins project folder...'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('jenkins_project') {
                    echo "Installing Python dependencies..."
                    bat 'python -m pip install --upgrade pip' // Upgrade pip first
                    bat 'pip install -r requirements.txt'
                }
            }
        }

        stage('Data Preprocessing') {
            steps {
                dir('jenkins_project') {
                    echo "Running data preprocessing script..."
                    bat 'python data_preprocessing.py'
                }
            }
        }

        stage('Train Model') {
            steps {
                dir('jenkins_project') {
                    echo "Training the model..."
                    bat 'python train_model.py'
                }
            }
        }

        stage('Test Model') {
            steps {
                dir('jenkins_project') {
                    echo "Testing the model..."
                    bat 'python test_model.py'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('jenkins_project') {
                    echo "Building Docker image..."
                    bat 'docker build -t travel-price-prediction .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                dir('jenkins_project') {
                    echo "Deploying the application via Docker..."
                    
                    // Stop and remove any existing container gracefully
                    bat '''
                        docker ps -q --filter "name=travel-price-container" | findstr . && docker stop travel-price-container && docker rm travel-price-container || echo "No container to stop"
                    '''
                    
                    // Run the new container
                    bat 'docker run -d --name travel-price-container -p 5000:5000 travel-price-prediction'
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully! Application deployed."
        }
        failure {
            echo "Pipeline failed. Please check the logs for details."
        }
    }
}
